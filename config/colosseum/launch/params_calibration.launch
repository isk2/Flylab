<launch>
  <!-- =================================================================== -->
  <!-- This file contains both the Arena-Stage and Arena-Camera            -->
  <!-- transform data.                                                     -->
  <!-- =================================================================== -->

  <!-- =================================================================== -->
  <!-- Arena-Camera transform.                                             -->
  <!--                                                                     -->
  <!-- "roslaunch calibration CameraArena.launch"                          -->
  <!--                                                                     -->
  <!-- Use the following command to move the center and radius of the      -->
  <!-- circle to correspond to the arena:                                  -->
  <!-- rostopic pub -1 Joystick/Commands geometry_msgs/Point @@ dx dy dr   -->
  <!-- (where dx,dy,dr are replaced with numbers, and the @'s are hyphens) -->
  <!-- =================================================================== -->
  

  <!-- Set the checker_size before running the CameraArena.launch calibration.    -->
  <param name="calibration/checker_size" type="double" value="14.4" />

  <!-- The mask circle in camera coordinates (i.e. pixels).    -->
  <param name="camera/mask/x"      type="double" value="350"/>
  <param name="camera/mask/y"      type="double" value="244"/>
  <param name="camera/mask/radius" type="double" value="240"/>



  <!-- These values come from CameraArena.launch, with a checkerboard on the arena. They might need fiddling with after use. -->
  <param name="camera_arena_rvec_0" type="double" value="-3.131"/>
  <param name="camera_arena_rvec_1" type="double" value="0.010"/>
  <param name="camera_arena_rvec_2" type="double" value="-0.101"/>
  <param name="camera_arena_tvec_0" type="double" value="124.156"/> <!-- Adjust for arena alignment here. -->
  <param name="camera_arena_tvec_1" type="double" value="86.672"/> <!-- Adjust for arena alignment here. -->
  <param name="camera_arena_tvec_2" type="double" value="348.670"/>
  

  <!-- ================================================================== -->
  <!-- Arena-to-Stage transform                                           -->
  <!-- where you align the computed end-effector position with the visual -->
  <!-- end-effector position.                                             -->
  <!--                                                                    -->
  <!-- "roslaunch calibration StageArena.launch"                          -->
  <!-- Then let it run until the "Translation Vector" and "Quaternion"    -->
  <!-- stabilize.  Then copy the translation & quaternion values to       -->
  <!-- the "args" below, e.g.  as:  tx,ty,tz,qx,qy,qz,qw                  -->
  <!--                                                                    -->
  <!-- ================================================================== -->
  
  <param name="arena_stage_x" type="double" value="5.65"/>  <!-- Adjust for stage alignment here. -->
  <param name="arena_stage_y" type="double" value="-1.1"/>  <!-- Adjust for stage alignment here. -->
  <param name="arena_stage_z" type="double" value="0.0"/>
  <param name="arena_stage_qx" type="double" value="0.0"/>
  <param name="arena_stage_qy" type="double" value="0.0"/>
  <param name="arena_stage_qz" type="double" value="1.014"/>
  <param name="arena_stage_qw" type="double" value="0.013"/>


</launch>
