<launch>
  <!-- =================================================================== -->
  <!-- This file contains both the Arena-Stage and Arena-Camera            -->
  <!-- transform data.                                                     -->
  <!-- =================================================================== -->

  <!-- =================================================================== -->
  <!-- Arena-Camera transform.                                             -->
  <!--                                                                     -->
  <!-- "roslaunch calibration CameraArena.launch"                          -->
  <!--                                                                     -->
  <!-- Use the following command to move the center and radius of the      -->
  <!-- circle to correspond to the arena:                                  -->
  <!-- rostopic pub -1 Joystick/Commands geometry_msgs/Point @@ dx dy dr   -->
  <!-- (where dx,dy,dr are replaced with numbers, and the @'s are hyphens) -->
  <!-- =================================================================== -->
  

  <!-- Set the checker_size before running the CameraArena.launch calibration.    -->
  <param name="calibration/checker_size" type="double" value="14.4" />

  <!-- The mask circle in camera coordinates (i.e. pixels).    -->
  <param name="camera/mask/x"      type="double" value="350"/>
  <param name="camera/mask/y"      type="double" value="244"/>
  <param name="camera/mask/radius" type="double" value="240"/>



  <!-- These values come from CameraArena.launch, with a checkerboard on the arena. -->
  <param name="camera_arena_rvec_0" type="double" value="-3.10"/>
  <param name="camera_arena_rvec_1" type="double" value="0.011"/>
  <param name="camera_arena_rvec_2" type="double" value="-0.09"/>
  <param name="camera_arena_tvec_0" type="double" value="-6"/> 
  <param name="camera_arena_tvec_1" type="double" value="-8"/> 
  <param name="camera_arena_tvec_2" type="double" value="337.874"/>
  

  <!-- ================================================================== -->
  <!-- Arena-to-Stage transform                                           -->
  <!-- where you align the kinematic end-effector position with the       -->
  <!-- visual end-effector position.                                      -->
  <!--                                                                    -->
  <!-- "roslaunch calibration StageArena.launch"                          -->
  <!-- Then let it run until the "Translation" and "Quaternion"           -->
  <!-- stabilize.  Then copy the translation & quaternion values to       -->
  <!-- the "args" below, e.g.  as:  x,y,z, qx,qy,qz,qw                    -->
  <!--                                                                    -->
  <!-- ================================================================== -->
  
  <!-- These values come from StageArena.launch. -->
  <param name="arena_stage_x" type="double" value="-1.6"/>
  <param name="arena_stage_y" type="double" value="2.4"/> 
  <param name="arena_stage_z" type="double" value="0.0"/>
  <param name="arena_stage_qx" type="double" value="0.0"/>
  <param name="arena_stage_qy" type="double" value="0.0"/>
  <param name="arena_stage_qz" type="double" value="0.98"/>
  <param name="arena_stage_qw" type="double" value="-0.02"/>


</launch>
