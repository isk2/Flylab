	<param name="fivebar/kD"      type="double" value="0.0"/>
	<param name="fivebar/maxI"    type="double" value="0.0"/>  
	<param name="fivebar/kWindup" type="double" value="0.8"/>  
	 -->

	<!-- 
	<param name="fivebar/kP"      type="double" value="0.2"/>
	<param name="fivebar/kI"      type="double" value="0.6"/>
	<param name="fivebar/kD"      type="double" value="0.0"/>
	<param name="fivebar/maxI"    type="double" value="1.0"/>  
	<param name="fivebar/kWindup" type="double" value="0.3"/>  
	 -->

	<!-- --> 
	<param name="fivebar/kP"      type="double" value="1.0"/>
	<param name="fivebar/kI"      type="double" value="0.05"/>
	<param name="fivebar/kD"      type="double" value="-0.2"/>
	<param name="fivebar/maxI"    type="double" value="60.0"/>  
	<param name="fivebar/kWindup" type="double" value="1.0"/>  
	<!-- -->

	<node name="joint1" pkg="rosSimpleStep" type="rosSimpleStep.py" args="--name='joint1' --id='0.0.A'"/>
