<launch>
	<!-- ==========================================================    -->
	<!-- To run the galvo calibration:                                 -->
    <!--                                                               -->
    <!--  1. Remove all flies.                                         -->
    <!--  2. rm /cameras/background.png                                -->
    <!--  3. Turn off the backlight.                                   -->
    <!--  4. Remove the lens filter.                                   -->
    <!--  5. roslaunch galvodirector calibrator.launch                 -->
    <!--  6. run the galvodriver on the galvobox.                      -->
    <!--  7. After the "Saving background" message, turn on the laser. -->
    <!--  8. Adjust laser power and/or param tracking/diff_threshold   -->
    <!--     to get good readings.                                     -->
    <!--                                                               -->
    <!--  9. Ctrl+c                                                    -->
    <!-- 10. Enter the given values into params_galvos.launch          -->
    <!-- 11. Install the lens filter.                                  -->
    <!-- 12. rm /cameras/background.png                                -->
    <!-- 13. Turn on the backlight.                                    -->
    <!--                                                               -->
	<!-- ==========================================================    -->

	<!-- ***  Core stuff  *** -->
	<include file="$(find flycore)/launch/flycore.launch" />
	
	<!-- ***  Hardware, Flies, and Robot  *** -->
	<include file="$(find config)/launch/hardware.launch" />
	<include file="$(find robots)/launch/robots_0.launch" />
	<include file="$(find flies)/launch/flies_1.launch" />

	<param name="galvodriver/hzPoint" type="double" value="262144.0"/>
	<param name="tracking/diff_threshold" type="double" value="100.0"/>
	
	<node pkg="galvodirector" type="Calibrator.py" name="GalvoCalibrator" />

	
  
</launch>
