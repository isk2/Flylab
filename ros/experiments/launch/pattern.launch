<launch>
	<!-- ========================================================== -->
	<!-- Configuration of the PATTERN experiment.                   -->
    <!--                                                            -->
    <!-- Edit this file to contain the elements of the particular   -->
    <!-- experiment.                                                -->
    <!--                                                            -->
    <!-- Launch this file to run the experiment.                    -->
	<!-- ========================================================== -->

	<!-- *** Core stuff *** -->
	<include file="$(find image_gui)/launch/DisplayDraw.launch" />
	<include file="$(find save_data)/launch/save_data.launch" />
	<include file="$(find config)/launch/hardware.launch" />
	<include file="$(find ui)/launch/ui.launch" />
	
	<!-- *** The Experiment *** -->
	<include file="$(find config)/launch/flies.launch" />
	<node pkg="patterngen" type="PatternGenXY.py" name="PatternGen" />
	<node pkg="experiments" type="Pattern.py" name="ExperimentPattern" />

	
  
</launch>
